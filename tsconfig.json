{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "strictPropertyInitialization": false,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "$src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "local"
  ]
}